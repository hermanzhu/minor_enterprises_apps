<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/indexOfSwldTopBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toutu" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/liebiao2x"
            android:id="@+id/indexListButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="30dp"
            android:text="圣瓦伦丁" 
            android:textColor="#FFFFFF"/>
      
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
            android:background="@drawable/yanjing2x"
            android:id="@+id/indexRightButton" />
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/indexOfSwldMainPart"
    android:layout_below="@id/indexOfSwldTopBar"
     android:background="@drawable/di">

     <ImageView
         android:id="@+id/indexImageView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         
          />
     <TextView android:id="@+id/indexTextView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/indexImageView1"
         android:layout_centerHorizontal="true"/>
     <TextView android:id="@+id/indexTextView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/indexImageView1"
         android:layout_centerHorizontal="true"/>
     <ImageView
         android:id="@+id/indexImageView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
          />

</RelativeLayout>
</RelativeLayout>
